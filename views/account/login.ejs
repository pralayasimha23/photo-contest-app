<%-include('../partials/header');-%>



<body>


    
  <main>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-5 intro-section">
          <div class="brand-wrapper">
            <img src="/images/logo.png" alt="" class="logo">
            <p><b>ClixMania</b></p>
          </div>
          <div class="intro-content-wrapper">
            <h1 class="intro-title">Welcome to ClixMania!</h1>
            <p class="intro-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
          </div>
          <div class="intro-section-footer">
            <p>Terms And Conditions Apply</p>
          </div>
        </div>
        <div class="col-sm-7 form-section">
            <p class="login-wrapper-signup-text">Need an account? <strong> <a href="/signup">Signup here</a></p></strong>

            <div class="login-wrapper">

            <% if(messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show">
                   
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <% messages.success.forEach(function(success){ %>
                    <div><%= success.msg %></div>
                 <% }); %>
                </div>
                <% } %>
                
                <% if(messages.errors) { %>
                <div class="alert alert-danger alert-dismissible fade show">
                   
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <% messages.errors.forEach(function(error){ %>
                    <div><%= error.msg %></div>
                    <% }); %>
                </div>
                <% } %>
                
                <% if(messages.info) { %>
                <div class="alert alert-info alert-dismissible fade show">
                    
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                      <% messages.info.forEach(function(info){ %>
                      <div><%= info.msg %></div>
                       <% }); %>
                </div>
                <% } %>

          
            <h2 class="login-title">Sign in</h2>
            <form  method="post">
               
              <div class="form-group">
                <label for="email" class="sr-only">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Email">
              </div>
              <div class="form-group mb-3">
                <label for="password" class="sr-only">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
              </div>
              <div class="custom-control custom-checkbox login-check-box">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember Me</label>
              </div> 
              <div class="d-flex justify-content-between align-items-center mb-5">
                <button style="background-color:#1ab394;" name="login" id="login" class="btn login-btn" type="submit" value="Login">Login</button>

                <a href="/forgot" class="forgot-password-link">Password?</a>
              </div>
            </form>
            <h6 class="social-login-title">OR</h6>
            <nav class="social-login-links">
              <!-- <a href="#!" class="social-login-link">
                <img src="/images/facebook.svg" alt="facebook logo"> Facebook
              </a>
              <a href="#!" class="social-login-link">
                <img src="/images/twitter.svg" alt="twitter logo"> Twitter
              </a> -->
              <a href="/auth/google" class="social-login-link">
                <img src="/images/google.svg" alt="google logo"> Google
              </a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <%-include('../partials/footer');-%>