<%-include('../partials/header');-%>






           
            <div class="container">

              <div class="pb-2 mt-2 mb-4 border-bottom">
                <h3>Forgot Password</h3>
              </div>
              

              <% if(messages.success) { %>
                <div class="alert alert-success alert-dismissible fade show">
                   
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <% messages.success.forEach(function(success){ %>
                    <div><%= success.msg %></div>
                 <% }); %>
                </div>
                <% } %>
                
                <% if(messages.errors) { %>
                <div class="alert alert-danger alert-dismissible fade show">
                   
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <% messages.errors.forEach(function(error){ %>
                    <div><%= error.msg %></div>
                    <% }); %>
                </div>
                <% } %>
                
                <% if(messages.info) { %>
                <div class="alert alert-info alert-dismissible fade show">
                    
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                      <% messages.info.forEach(function(info){ %>
                      <div><%= info.msg %></div>
                       <% }); %>
                </div>
                <% } %>

              
             <div class="row">
               <div class="col-md-6">
                <p class="pb-4">Enter your email address below and we will send you password reset instructions.</p>
                <img src="/img/forgot-password.jpg" style="width:400 ; height: 300px;" alt="">

              </div>
              <div class="col-md-6">
              <form method="POST">
                <input type="hidden" name="_csrf">
               
                
               
                
                <div class="form-group ">
                 
               
                  <div class="col-md-6">
                    <!-- <label class="col-md-3 col-form-label font-weight-bold text-right" for="email">Email</label> -->
                    <input class="form-control" type="email" name="email" id="email" placeholder="Email" autofocus autocomplete="email" required>
                  </div>
                </div>
                <div class="form-group offset-sm-3 col-md-7 pl-2">
                  <button class="btn btn-primary" type="submit"><i class="fas fa-key fa-sm"></i>Reset Password</button>
                </div>
              </form>
            </div>

            </div>




            </div>

            
            <%-include('../partials/footer');-%>